[color]
  ui = true

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[apply]
  whitespace = nowarn

[branch]
  autosetuprebase = always

[core]
  autocrlf = false
  quotepath = false
  pager = diff-highlight | diff-so-fancy | less -r

[alias]
  st = status -sb
  conflicts = "!git status --short | grep \"^UU\""
  orphan = checkout --orphan
  diff = diff --word-diff
  log = log --decorate
  which-release = name-rev --name-only
  in-branch = branch --contains
  in-upstream = cherry -v master

[http]
	cookiefile = /Users/mjwalf/.gitcookies

[user]
    name = Mark Walford
    user = mjwalf
    email = mark@kramit.com.au
    IdentityFile = ~/.ssh/github.com/id_rsa

[url "git@github.com:"]
    insteadOf = https://github.com/

[include]
    #Put Username / Creds / Token in this file
    path = ~/.localsecrets

[core]
	excludesfile = /Users/mjwalf/dotfiles/gitignore